                                        <%- include("advertisement",{title:news[i+1].title, subTitle:news[i+1].title, description:news[i+1].text, src: "/pictures/upload/" + news[i+1].img, id:news[i+1]._id, href:"/pages/news/" + news[i+1]._id}) %>
                                    <% } %>
                                </div>
                            <% }else{ %>
                                <div class="news-conteiner-row">
                                    <%- include("advertisement",{title:news[i].title, subTitle:news[i].title, description:news[i].text, src: "/pictures/upload/" + news[i].img, id:news[i]._id, href:"/pages/news/" + news[i]._id}) %>
